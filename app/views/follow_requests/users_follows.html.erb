<h1>People I Follow</h1>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @follow_requests.each do |follow_request| %>
      <tr>
        <td>
          <%= follow_request.id %>
        </td>

        <td>
          <%= follow_request.sender %>
        </td>

        <td>
          <%= follow_request.recipient %>
        </td>

        <td>
          <%= time_ago_in_words(follow_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(follow_request.updated_at) %> ago
        </td>

        <td>
          <a href="/follow_requests/<%= follow_request.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>