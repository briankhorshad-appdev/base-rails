<h1>My Follow Requests</h1>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table" border=1>
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @follow_request.each do |follow_request| %>
      <tr>
        <td>
          <%= follow_request.id %>
        </td>

        <td>
          <%= follow_request.sender %>
        </td>

        <td>
          <%= follow_request.recipient %>
        </td>

        <td>
          <%= time_ago_in_words(follow_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(follow_request.updated_at) %> ago
        </td>

        <td>
          <a href="/delete_follow_request/<%= follow_request.id %>">
            Remove Follower
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>